;; === HYPER LAYER CONFIGURATION ===

;; --- Hyper Layer (CapsLock + keys) ---
;; hjkl = mnei in Colemak
;; aj~hjlk~ - join windows

(deflayer hyper
  _ _ _ _ _ _ _ _ _ _ _ _ 
  @aer1 @aer2 @aer3 @aer4 @aer5 _  _     _     _     _     @aer0  
  _     _     @aerf @aerp @aerb _  @ajh  @ajj  @ajk  @ajl  @aserv
  _     @aerr @hys  @aert @aerg    @aerh @aerj @aerk @aerl @hyo
  @aerz @aerx @aerc _     @aerv _  _     _     @aer- @aer+ _
  _           lsft              fn             _            
)

;; --- Applications Layer (Hyper + o) ---
(deflayer app 
  _ _ _ _ _ _ _ _ _ _ _ _ 
  _     _     _     _     _     _     _     _     _     _     _
  _     _     _     _     @book _     _     _     _     _     _
  @anki _     @sfri @gram @ghst       _     _     @emcs _     _
  @zen  _     @cgpt _     _     _     _     _     _     _     _
  _           _                 _                 _            
)

;; --- Safari Layer (Hyper + s) ---
(deflayer safari
  _ _ _ _ _ _ _ _ _ _ _ _ 
  _     _     _     _     _     _     _     _     _     _     _
  _     _     _     _     _     _     _     @lsj  _     _     _
  _     @rddt _     _     _           _     _     @edcs _     _
  _     _     _     _     _     _     _     _     _     _     _
  _           _                 _                 _            
)

(defalias
  ;; --- Aerospace ---
  aer1 C-A-M-1
  aer2 C-A-M-2
  aer3 C-A-M-3
  aer4 C-A-M-4
  aer5 C-A-M-5
  aer0 C-A-M-0
  aerf C-A-M-f
  aerp C-A-M-p
  aerb C-A-M-b
  aerr C-A-M-r
  aert C-A-M-t
  aerg C-A-M-g
  aerz C-A-M-z
  aerx C-A-M-x
  aerc C-A-M-c
  aerv C-A-M-v
  ;; --- Aerospace motion ---
  aerh C-A-M-lft
  aerj C-A-M-down
  aerk C-A-M-up
  aerl C-A-M-rght
  ;; --- Aerospace join ---
  ajh C-A-y
  ajj C-A-u
  ajk C-A-i
  ajl C-A-o
  ;; --- Aerospace misc ---
  aserv C-A-p
  aer+ C-A-M-eql
  aer- C-A-M-min

  ;; --- General ---
  hyo (tap-hold-press $tap_timeout $hold_timeout XX (layer-while-held app))
  hys (tap-hold-press $tap_timeout $hold_timeout C-A-M-s (layer-while-held safari))
 
  ;; --- Application shortcuts ---
  anki   (cmd "open" "-a" "Anki")
  book   (cmd "open" "-a" "Books")
  cgpt   (cmd "open" "-a" "ChatGPT")
  emcs   (cmd "open" "raycast://script-commands/emacsclient")
  find   (cmd "open" "-a" "Finder")
  ghst   (cmd "open" "-a" "Ghostty")
  sfri   (cmd "open" "-a" "Safari")
  gram   (cmd "open" "-a" "AyuGram")
  zen    (cmd "open" "-a" "Zen")

  ;; --- Browser shortcuts --- 
  rddt   (cmd "sh" "-c" "open 'https://reddit.com'")
  lsj    (cmd "sh" "-c" "open 'https://lsj.gr'")
  edcs   (cmd "sh" "-c" "open 'https://emacsdocs.org'")
)

