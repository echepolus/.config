;; === HYPER LAYER CONFIGURATION ===

;; --- Hyper Layer (CapsLock + keys) ---

(deflayer hyper 
 _ _     _     _     _     _         _     _     _     _     _      _ _ _ 
 _ @aer1 @aer2 @aer3 @aer4 @aer5     _     _     _     _     @aer0  _ _ _

 _ @aerq @aerw @aerf @aerp @aerb     @ajh  @ajj  @ajk  @ajl  @aserv _ _ _
 _ @aera @aerr @hys  @aert @aerg     @aerh @aerj @aerk @aerl @hyo   _ _
 _ @aerz @aerx @aerc _     @aerv  _  _     @acco @aer- @aer+ @atls  _
 _             _     _     lsft   _  _     _
)

;; --- Applications Layer (Hyper + o) ---
(deflayer app 
 _ _     _     _     _     _         _     _     _     _     _      _ _ _ 
 _ _     _     _     _     _         _     _     _     _     _      _ _ _ 

 _ _     _     @find _     @book     _     _     _     _     _      _ _ _
 _ _     @tor  @sfri @gram @ghst     _     _     @emcs _     _      _ _
 _ @zen  _     @cgpt _     _      _  _     _     _     _     _      _
 _             _     _     _      _  _     _                  
)

;; --- Safari Layer (Hyper + s) ---
(deflayer safari
 _ _     _     _     _     _         _     _     _     _     _      _ _ _ 
 _ _     _     _     _     _         _     _     _     _     _      _ _ _ 

 _ _     _     _     _     _         _     _     _     _     _      _ _ _ 
 _ _     _     _     _     _         _     @lsj  _     _     _      _ _
 _ _     @rddt _     _     _      _  _     _     @edcs _     _      _
 _             _     _     _      _  _     _
)

(defalias
  ;; --- Aerospace ---
  aer1 C-A-M-1
  aer2 C-A-M-2
  aer3 C-A-M-3
  aer4 C-A-M-4
  aer5 C-A-M-5
  aer0 C-A-M-0
  aera (cmd "open" "-a" "Anki")
  aerf C-A-M-f
  aerp C-A-M-p
  aerb C-A-M-b
  aerr C-A-M-r
  aert C-A-M-t
  aerg C-A-M-g
  aerz C-A-M-z
  aerx C-A-M-e
  aerc C-A-M-c
  aerv C-A-M-v
  ;; --- Aerospace motion ---
  aerh C-A-M-lft
  aerj C-A-M-down
  aerk C-A-M-up
  aerl C-A-M-rght
  ;; --- Aerospace join ---
  ajh C-A-lft
  ajj C-A-down
  ajk C-A-up
  ajl C-A-rght
  ;; --- Aerospace misc ---
  aserv C-A-p
  aer+ C-A-M-eql
  aer- C-A-M-min
  acco C-A-M-,
  atls C-A-M-/
  aerq M-q
  aerw M-w

  ;; --- General ---
  hyo (tap-hold-press 200 200 XX (layer-while-held app))
  hys (tap-hold-press 200 200 C-A-M-s (layer-while-held safari))
 
  ;; --- Application shortcuts ---
  anki   (cmd "open" "-a" "Anki")
  book   (cmd "open" "-a" "Books")
  cgpt   (cmd "open" "-a" "ChatGPT")
  emcs   (cmd "open" "raycast://script-commands/emacsclient")
  find   (cmd "open" "-a" "Finder")
  ghst   (cmd "open" "-a" "Ghostty")
  sfri   (cmd "open" "-a" "Safari")
  gram   (cmd "open" "-a" "AyuGram")
  zen    (cmd "open" "-a" "Zen")
  tor    (cmd "open" "-a" "Tor Browser")
  ;; --- Browser shortcuts --- 
  rddt   (cmd "sh" "-c" "open 'https://reddit.com'")
  lsj    (cmd "sh" "-c" "open 'https://lsj.gr'")
  edcs   (cmd "sh" "-c" "open 'https://emacsdocs.org'")
)
