;; combo definition

(defcfg 
  concurrent-tap-hold yes
  danger-enable-cmd yes
  process-unmapped-keys yes
)

(defchordsv2

  ;; left side
  (e r) @eng $chord-time all-released    (          sym fun nav mos    )
;;(w e) @rus $chord-time all-released    (          sym fun nav mos    )
  (x c) @_   $chord-time all-released    (          sym     nav mos qwe)
  (c v) -    $chord-time all-released    (          sym     nav mos qwe)
  (r f) @``  $chord-time all-released    (          sym fun nav mos qwe)
  (e d) @''  $chord-time all-released    (          sym fun nav mos qwe)
  (w r) @<>  $chord-time all-released    (              fun nav mos qwe)
