;; Timing variables are defined in `kanata.kbd` file.

(defalias
  ;; Main mod-tap: Nav layer when held, Space when tapped.
  nav (tap-hold $tap_timeout $long_hold_timeout spc (layer-while-held navigation))

  ;; Space-cadet thumb keys: Shift/BackSpace, AltGr/Enter.
  ;; Acts as a modifier by default, or as BackSpace/Enter when tapped separately.
  sft (tap-hold-press $tap_timeout $hold_timeout bspc lsft)
  sym (tap-hold-press $tap_timeout $hold_timeout ret (layer-while-held symbols))

  ;; Home-row mods
  rr (tap-hold $tap_timeout $long_hold_timeout r lmet)
  ss (tap-hold $tap_timeout $long_hold_timeout s lctl)
  tt (tap-hold $tap_timeout $long_hold_timeout t lalt)
  nn (tap-hold $tap_timeout $long_hold_timeout n lalt)
  ee (tap-hold $tap_timeout $long_hold_timeout e rctl)
  ii (tap-hold $tap_timeout $long_hold_timeout i rmet)

  hy (tap-hold-press $tap_timeout $hold_timeout esc (layer-while-held hyper))

  fnl (tap-hold 200 200 fn (layer-toggle fnlayer))

  ;; macOS function key glyphs
  mc C-up ;; Mission Control
  sls M-spc ;; Spotlight Search
  dtn S-C-A-M-f5 ;; Dictation
  dnd S-C-A-M-f6 ;; Do Not Disturb
)

;; macOS function key glyphs
